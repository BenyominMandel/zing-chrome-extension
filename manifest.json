{
  "name": "Zing Audio Downloader",
  "version": "1.0.6",
  "manifest_version": 3,
  "action": { "default_title": "Download last track" },
  "permissions": ["downloads", "webRequest", "tabs", "scripting"],
  "host_permissions": [
    "https://zingmusic.app/*",
    "https://www.zingmusic.app/*",
    "https://jewishmusic.fm/*",
    "https://jewishmusic.fm:8443/*"
  ],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": [
        "https://zingmusic.app/*",
        "https://www.zingmusic.app/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
